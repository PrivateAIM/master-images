{
    "name": "master-images",
    "version": "3.6.0",
    "description": "Build, tag, list & push docker images and push to docker registry.",
    "files": [
        "dist",
        "data"
    ],
    "author": {
        "name": "Peter Placzek",
        "url": "https://github.com/tada5hi"
    },
    "scripts": {
        "build:types": "tsc --emitDeclarationOnly -p tsconfig.json",
        "build:js": "rollup -c",
        "build": "rimraf dist && rimraf bin && npm run build:types && npm run build:js",
        "cli": "node dist/cli.js",
        "cli-dev": "ts-node src/cli.ts",
        "lint": "eslint --ext .ts,.vue,.js ./src/",
        "lint:fix": "npm run lint -- --fix"
    },
    "keywords": [
        "pht",
        "train",
        "master-image",
        "docker",
        "image-scan"
    ],
    "main": "dist/index.cjs",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "exports": {
        "./package.json": "./package.json",
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs"
        },
        "./bin/*": "./bin/*"
    },
    "bin": "dist/cli.js",
    "license": "MIT",
    "dependencies": {
        "@routup/body": "^2.4.0",
        "@tada5hi/semantic-release": "^0.3.1",
        "@tada5hi/tsconfig": "^0.5.1",
        "cac": "^6.7.14",
        "consola": "^3.2.3",
        "continu": "^1.3.2",
        "cross-spawn": "^7.0.3",
        "docker-scan": "^1.1.0",
        "dockerode": "^4.0.2",
        "dotenv": "^16.4.5",
        "get-port-please": "^3.1.2",
        "locter": "^2.1.0",
        "routup": "^4.0.0",
        "semantic-release": "^22.0.12",
        "semver": "^7.6.2",
        "smob": "^1.5.0",
        "tar-fs": "^3.0.6",
        "ts-node": "^10.9.1",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@rollup/plugin-node-resolve": "^15.2.3",
        "@rollup/plugin-swc": "^0.3.1",
        "@tada5hi/eslint-config-typescript": "^1.2.11",
        "@types/cross-spawn": "^6.0.2",
        "@types/dockerode": "^3.3.30",
        "@types/node": "^22.4.1",
        "@types/semver": "^7.5.8",
        "@types/tar-fs": "^2.0.4",
        "eslint": "^8.48.0",
        "rollup": "^4.18.1",
        "typescript": "^5.5.2"
    }
}
